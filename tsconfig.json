{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "styled-components",
      "react-native",
      "jest"
    ],
    "module": "esnext",
    "target": "es2017"
  },
  "include": [
    "src",
    "src/styles/styled.d.ts",
    "@types/env.d.ts",
    "**/__tests__/*.ts",
    "**/__tests__/*.tsx"
  ]
}
